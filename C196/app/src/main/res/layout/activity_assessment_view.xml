<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Utility.AssessmentView">

    <Button
        android:id="@+id/homeBtn3"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:onClick="onClickHomeBtn"
        android:text="Home"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="175dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="177dp"
        android:layout_height="47dp"
        android:text="Select an item from the list to either modify or delete."
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="110dp" />

    <Button
        android:id="@+id/addBtn3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:onClick="onActionAddAssessment"
        android:text="Add"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="175dp" />

    <TextView
        android:layout_width="226dp"
        android:layout_height="53dp"
        android:text="Assessments"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="normal"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="38dp" />

    <ListView
        android:id="@+id/AssessmentLstVw"
        android:layout_width="371dp"
        android:layout_height="452dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="254dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.MainActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Term.TermDetailedView">

    <ListView
        android:id="@+id/termDVCoursesLstVw"
        android:layout_width="421dp"
        android:layout_height="490dp"
        android:layout_marginTop="94dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termDVEndDateTxtVw" />

    <Button
        android:id="@+id/termDVModifyBtn"
        android:layout_width="70dp"
        android:layout_height="49dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="62dp"
        android:onClick="onCLickTermDVModifyBtn"
        android:text="Modify Term"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/termDVStartDateTxtVw"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/termDVTitleTxtVw"
        android:layout_width="156dp"
        android:layout_height="33dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="56dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/termDVStartDateTxtVw"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termDVTitleTxtVw" />

    <TextView
        android:id="@+id/termDVEndDateTxtVw"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termDVStartDateTxtVw" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
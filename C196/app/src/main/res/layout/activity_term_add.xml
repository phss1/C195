<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.TermAdd">

    <EditText
        android:id="@+id/termEndDateTxtFld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="EndDate: 01/23/2019"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="255dp" />

    <EditText
        android:id="@+id/termStartDateTxtFld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="StartDate: 01/22/2019"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="191dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="174dp"
        android:layout_height="53dp"
        android:text="Add Term"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="normal"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="32dp" />

    <EditText
        android:id="@+id/termTitleTxtFld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="title"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="131dp" />

    <ListView
        android:id="@+id/addTermLstVw"
        android:layout_width="421dp"
        android:layout_height="352dp"
        tools:layout_editor_absoluteY="372dp" />

    <Button
        android:id="@+id/Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickCancelBtn"
        android:text="Button"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="311dp" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSaveBtn"
        android:text="Save"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="314dp" />
</androidx.constraintlayout.widget.ConstraintLayout>